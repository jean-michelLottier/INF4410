pushd $(dirname $0) > /dev/null
basepath=$(pwd)
popd > /dev/null

# Option a ajuster et ajouter pour lancer un serveur a distance.
#  -Djava.rmi.server.hostname=mycomputer.example.com \

/usr/java/jre1.7.0_40/bin/java -cp $basepath/server.jar:$basepath/shared.jar \
  -Djava.rmi.server.codebase=file:$basepath/shared.jar \
  -Djava.security.policy=$basepath/policy \
  ca.polymtl.inf4410.tp1.server.Server
